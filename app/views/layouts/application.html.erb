<!DOCTYPE html>
<html>
<head>
  <title>BookStore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <div id="user-nav">
      <strong>Book Store</strong>
      <%= link_to "Home", root_path %> |
      <%= link_to "Shop", books_path %>
      <%= link_to "Cart", root_path %>
      
      <% if customer_signed_in? %>
        Logged in as <strong><%= current_customer.email %></strong>.
        <%= link_to 'Edit profile', edit_customer_registration_path %> |
        <%= link_to "Logout", destroy_customer_session_path, method: :delete %>
      <% else %>
        <%= link_to "Sign up", new_customer_registration_path %> |
        <%= link_to "Login", new_customer_session_path %>
      <% end %>
      
      <%= link_to "Sign in with Facebook", customer_omniauth_authorize_path(:facebook) %>
    </div>
 
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash-#{name}" %>
    <% end %>
    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  
    <%= yield %>

  </body>
</html>



